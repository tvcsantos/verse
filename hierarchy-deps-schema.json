{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Hierarchy Dependencies",
  "description": "Schema for Gradle project hierarchy dependencies output",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "Relative file system path to the project directory"
        },
        "version": {
          "type": "string",
          "description": "Current version of the project",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z-.]+)?$"
        },
        "affectedSubprojects": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": ".*"
          },
          "description": "List of subproject ids that are affected when this project changes",
          "uniqueItems": true
        }
      },
      "required": ["path", "version", "affectedSubprojects"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      ":": {
        "path": ".",
        "version": "1.0.0",
        "affectedSubprojects": [":base", ":spring", ":spring:core", ":spring:servlet"]
      },
      ":base": {
        "path": "base",
        "version": "1.0.0",
        "affectedSubprojects": []
      },
      ":spring": {
        "path": "spring",
        "version": "1.0.0",
        "affectedSubprojects": [":spring:core", ":spring:servlet"]
      },
      ":spring:core": {
        "path": "spring/core",
        "version": "1.0.0",
        "affectedSubprojects": []
      },
      ":spring:servlet": {
        "path": "spring/servlet",
        "version": "1.0.0",
        "affectedSubprojects": []
      }
    }
  ]
}

